@using AncestryWeb.Models
@model AncestryWeb.Models.ImageModel

<link href="~/Content/screenshot.css" rel="stylesheet" />
<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
    <a class="navbar-brand" href="#">
        <img src="~/Content/Images/icon.png" width="30" height="30" class="d-inline-block align-top" alt="">
        Screen Capture Extension
    </a>
    <ul class="navbar-nav my-2 my-lg-0">
        <li class="nav-item active">
            <a class="nav-link" href="#"><button class="btn btn-outline-info">Login</button></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#"><button class="btn btn-main">Get extension</button></a>
        </li>
    </ul>
</nav>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="image">
                <img class="img" width="100%" src="@Model.Link" data-action="zoom">
            </div>
            <div class="name">
                <h2>@Model.Name</h2>
            </div>
            <div class="user">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="user-image text-center">
                            <img src="~/Content/Images/icon.png" width="80%" />
                        </div>
                    </div>
                    <div class="col-lg-10 justify-content-center align-items-center">
                        <div class="user-info">
                            <div class="user-name">
                                <h5>Oleksii</h5>
                            </div>
                            <div class="data-date">
                                <p>21 Dec, 2020</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="comment">
                <textarea class="comment-input" rows="5"></textarea>
                <div class="row float-right m-0">
                    <button class="btn btn-main">Post</button>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="shareBlock">
                <div class="row m-0">
                    <div class="col-lg-12">
                        <h3>
                            Send Your Screenshot
                        </h3>
                    </div>
                </div>
                <div class="row m-0">
                    <div class="col-lg-8">
                        <button class="btn btn-main btn-copy text-center"><i class="fas fa-link"></i> Copy Link</button>
                    </div>
                    <div class="col-lg-4">
                        <button class="btn btn-share text-center"><i class="fas fa-share"></i></button>
                    </div>
                </div>
            </div>

            <div class="shareBlock">
                <div class="row m-0">
                    <div class="col-lg-12">
                        <h3>
                            Delete This Screenshot
                        </h3>
                    </div>
                </div>
                <div class="row m-0">
                    <div class="col-lg-8">
                        <button class="btn btn-main btn-delete text-center">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

