@{
    ViewBag.Title = "Account Activation";
}

<script>
    validate();


    async function validate() {
        var result = "";
        let url = new URL(location.href);
        let code = url.searchParams.get("hash");
        let userId = url.searchParams.get("userId");
        if (! (code && userId)) {
            result = "Incorrect activation link. Please try again later."
        } else {
            result = await validateRequest();
            
        }

        document.querySelector("#activation-result").textContent = result.message;
        function validateRequest() {
            return new Promise((resolve, reject) => {
                $.ajax({
                    type: "POST",
                    traditional: true,
                    //contentType: "json",
                    data: { code, userId },
                    url: `${window.location.origin}/Account/VerifyUserActivation`,
                    dataType: "json",
                    success: (result) => {
                        resolve(result);
                    },
                    error: (result) => {
                        // console.log(result);
                        reject(result);
                    },
                });
            });
        }
    }
    
</script>
<div id="activation-result">
    @*Account Activated. You can now sign in*@
</div>

<style>
    body{
        padding: 0;
        margin: 0;
        height: 100vh;
        overflow: hidden;
    }
    #activation-result {
        position: absolute;
        top: 0;
        bottom: 5%;
        left: 0;
        right: 0;
        margin: auto;
        height: 70px;
        height: 70px;
        text-align: center;
        font-size: 25px;
    }
</style>
